<%
  object ||= nil
%>
<tr class="nested-fields">
  <td>
    <%= f.input "name_#{enabled_locale}",
                as: :string,
                label: false %>
  </td>
  <td>
    <%= f.input "url_#{enabled_locale}",
                as: :url,
                label: false %>
  </td>
  <td>
    <%= link_to_remove_association t('shared.actions.destroy'), f,
          data: { confirm: t('shared.prompts.confirm') },
          class: 'btn btn-danger' %>
  </td>
</tr>